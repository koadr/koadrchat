@import "foundation.min.css"

// Variables

black                 = #000000
body_background_color = #f16651
error_message_color   = #C60F13
h2_size               = 40px
h3_size               = 2em
form_color            = #383838
success_message_color = #00AFF0
white                 = #ffffff


// Functions and Mixins

border_radius(radius = 1px)
  border-radius         radius
  -webkit-border-radius radius
  -moz-border-radius    radius

form_padding(arguments)
  padding arguments

form_border(arguments)
  border arguments

generic_font_family()
  font-family "ff-enzo-web" , Helvetica, sans-serif

body
  background-color body_background_color
  generic_font_family()


.form_container
  border_radius 12px
  background-color form_color
  form_border solid 1px black
  padding 20px 20px 20px 80px

h1, h2, h3, h4, h5, h6
  color white
  font-weight normal
  generic_font_family()

h2
  font-size h2_size

h3
  font-size h3_size
  font-weight 600

label
  font-size: 14px
  color: #92a4ac
  font-weight: 500

