.tagline
  text-align center
  line-height 1.25
  margin 0 0 110px
  font-weight 200
  font-size 3.50em
  padding-top 50px
  color #191d1c

.green_background
  background-color #99d999
  font-weight normal
  border_radius 4px

.yellow_background
  background-color  #fff081
  font-weight normal
  border_radius 4px

.center_text
  text-align center

// Flash Messages

.full_message
  display block
  padding 6px 7px 7px 7px
  font-weight 600
  font-size 19px
  color white
  border 1px solid rgba(0, 0, 0, 0.1)
  margin-bottom 12px
  text-shadow 0 -1px rgba(0, 0, 0, 0.3)
  position relative

.info
  background-color success_message_color
  color white
  @extend .full_message
  text-shadow 0 -1px rgba(0, 0, 0, 0.3)

.error
  background-color error_message_color
  @extend .full_message
  color white
  text-shadow 0 -1px rgba(0, 0, 0, 0.3)


// Homepage

.homepage_info
  img
    display block
    margin auto

  p
    text-align center
    padding-top 12px
    font-family "Verdana"
    color #191d1c
    font-weight 200
    font-size 20px